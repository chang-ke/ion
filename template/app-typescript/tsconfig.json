{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "jsx": "preserve",
    "target": "es6",
    "module": "esnext",
    "outDir": "lib",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom"]
  },
  "compileOnSave": true,
  "include": ["./src/*.tsx", "./src/**/*.tsx"],
  "exclude": ["node_modules"]
}
